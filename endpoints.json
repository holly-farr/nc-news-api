{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article when given an article id",
    "queries": [1, 2, 3],
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Running a Node App",
          "topic": "coding",
          "author": "jessjelly",
          "body": "Text from the article..",
          "created_at": 1604728980000,
          "votes": 0,
          "article_img_url": "Image url.."
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves all comments from a single article when given an article id",
    "queries": [1, 2, 3],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-09-19T23:10:00.000Z"
        },
        {
          "comment_id": 10,
          "body": "git push origin master",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-06-20T07:24:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts and serves a single user comment for a specified article when provided with an article id, username and body",
    "queries": [1, { "username": "icellusedkars", "body": "spiffing cup of tea m'lady" } ],
    "exampleResponse": {
      "comment_id": 19,
      "body": "spiffing cup of tea m'lady",
      "article_id": 2,
      "author": "icellusedkars",
      "votes": 0,
      "created_at": "2024-02-22T17:01:06.345Z"
    }
  }
}
